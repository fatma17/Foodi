@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<h2 class="text-center mb-0 mt-3">Manage your account</h2>

<div>
    <p class="text-center mb-4">Change your account settings</p>

    <div class="row">
        <div class="col-md-3 border rounded-3 m-2">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-8 border rounded-3 m-2 p-4">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
