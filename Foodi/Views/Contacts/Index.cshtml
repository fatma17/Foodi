@model IEnumerable<Contact>
@{
    ViewData["Title"] = "Contacts";
}

<div class="row ms-3 me-3 mt-4 border shadow-ms rounded-3">

    <div class="overflow-hidden" style="background-color:#f9fafd;">
        <h1 class="m-4">Contacts</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="alert mt-4 mb-4" style="background-color:#fcb57d;">
            <div class="d-flex">
                <i class="fa-solid fa-circle-exclamation fa-lg me-2" style="line-height:30px;"></i>
                <h4 class="alert-heading d-flex"> No Contact found! </h4>
            </div>
            <p class="mb-0"> No Contacts</p>
        </div>
    }
    else
    {
        <div class="p-4 ps-5 pe-5">
            <table id="datatable" class="table mb-4">
                <thead class="text-uppercase">
                    <tr>
                        <th style="width:28%;">Email</th>
                        <th>Massege</th>
                        <th style="width:28%;">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr id="contact-@contact.Id">
                            <td>
                                <div class="ms-2">
                                    @contact.Email
                                </div>
                            </td>
                            <td>
                                <div class="ms-1">
                                    @contact.Message
                                </div>
                            </td>
                            <td>
                                @contact.ContactDate.ToString("dd/MM/yyyy")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>

