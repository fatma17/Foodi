@model Contact

<div class="row pt-5 mt-5">
    <div class="text-center">
        <h2>Contact Us</h2>
    </div>
    <div class="col-4">
        <img class="img-fluid" src="~/images/sentmessage.png" alt=" ">
    </div>
    <div class="col-4">
        <form id="contactForm">
            <div class="form-group mb-3">
                <input type="email" class="form-control p-2" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

           

            <div class="form-group mb-3">
                <textarea asp-for="Message" class="form-control p-2" placeholder="Message"> </textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="text-center mb-3">
                <button type="submit" class="btn btn-orange btn-lg w-75">Send Message</button>
            </div>
        </form>
    </div>
    <div class="col-4">
        <img class="img-fluid" src="~/images/message.png" alt=" ">
    </div>
</div>

